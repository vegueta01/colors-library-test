{
  "name": "libraries-test",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "pack": "npm run pack -ws",
    "build": "npm run pack -ws",
    "semantic-release": "semantic-release -ws",
    "update:pk": "npm version  --no-git-tag-version $(semver $npm_package_version -i major)",
    "version2": "$(echo semver $npm_package_version -i prerelease --preid $(npm whoami) )",
    "set:param": "npm run param -ws",
    "update:version": "semantic-release && npm run release-libraries",
    "release-libraries": "export NEW_VERSION_PACKAGE=$(semver $npm_package_version) && npm run update-version -ws && npm publish -ws"
  },
  "version": "1.7.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vegueta01/colors-library-test.git"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.2",
    "semantic-release": "^21.0.7",
    "semantic-release-monorepo": "^7.0.5"
  }
}
